<Window x:Class="CLIENT.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CLIENT"
        mc:Ignorable="d"
        Title="Login Window" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Belépés" FontSize="24" HorizontalAlignment="Center" Margin="0 30 0 0"/>
            <Label Content="Felhasználónév" />
            <TextBox x:Name="txtUsername" Height="25"/>
            <Label Content="Jelszó" />
            <PasswordBox x:Name="pswPassword" Height="25"/>
            <Button x:Name="btnLogin" Content="Belépés" Width="100" Click="BtnLogin_Click" Margin="0 20 0 0"/>
        </StackPanel>
    </Grid>
</Window>
